<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow JIT compilation for Electron/V8 -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <!-- Allow unsigned executable memory for Electron -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <!-- Disable library validation for Electron native modules -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    <!-- Allow DYLD environment variables -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    <!-- Network access for auto-update -->
    <key>com.apple.security.network.client</key>
    <true/>
    <!-- File access for opening/saving projects -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
